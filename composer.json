{
    "name": "subjective-php/input-filter-middleware",
    "description": "PSR-7 middleware for filtering request input",
    "keywords": ["psr", "middleware", "input", "filter"],
    "license": "MIT",
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "~5.6 || ~7.0",
        "dominionenterprises/filter": "^2.0",
        "php-http/message-factory": "^1.0",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "chadicus/coding-standard": "^1.1",
        "phpunit/phpunit": "^5.3",
        "satooshi/php-coveralls": "^1.0",
        "zendframework/zend-diactoros": "^1.3"
    },
    "autoload": {
        "psr-4": { "Chadicus\\Psr\\Middleware\\": "src" }
    },
    "autoload-dev": {
        "psr-4": { "ChadicusTest\\Psr\\Middleware\\": "tests" }
    }
}
